<div class="bg-white text-gray-900 border border-gray-200 p-6 rounded-lg shadow-lg mb-6">
  <div class="flex justify-between">
    <div class="text-2xl">
      <%= title %>
    </div>
    <div>
      <%= likes %> like<%= likes> 1 ? 's' : '' %>
    </div>
  </div>
  <div class="text-gray-600 mt-4">
    <p class="font-light">
      <span class="text-gray-500">Created <%= new Date(created + 'Z').toLocaleString('en-GB', { timeZone: 'Europe/London',hour12: true}) %></span>
      <% if (modified) { %>
        | <span class="text-blue-500">Modified <%= new Date(modified + 'Z').toLocaleString('en-GB', { timeZone: 'Europe/London',hour12: true }) %></span>
      <% } %>
      <% if (published) { %>
        | <span class="text-green-500">Published <%= new Date(published + 'Z').toLocaleString('en-GB', { timeZone: 'Europe/London',hour12: true}) %></span>
      <% } %>
    </p>
    <a href="/author/edit/<%= id %>" class="inline-block bg-blue-500 hover:bg-blue-700 text-white py-1 px-3 rounded mt-2">Edit</a>
    <% if (published) { %>
      <a href="/reader/<%= id %>" class="inline-block bg-blue-500 hover:bg-blue-700 text-white py-1 px-3 rounded mt-2">Read article</a>
    <% } else { %>
      <button onclick="publish('<%= id %>')" class="inline-block bg-green-500 hover:bg-green-700 text-white py-1 px-3 rounded mt-2">Publish</button>
    <% } %>
    <button type="button" onclick="del('<%= id %>')" class="inline-block bg-red-500 hover:bg-red-700 text-white py-1 px-3 rounded mt-2">Delete</button>
</div>

</div>
