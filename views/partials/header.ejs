<div class="px-8 py-6 text-center">
  <h1 class="text-4xl font-bold text-white">
    <%= global.settings.title %> <!-- No wrapping <a> tag -->
  </h1>
  <div class="max-w-md mx-auto mt-4">
    <p class="text-xl leading-relaxed">
      <%= global.settings.subtitle %>
    </p>
    <p class="font-light">
      <%= global.settings.author %>
    </p>
  </div>
  <% if (locals.goto) { %>
    <a href="/<%= goto %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block">
      Go to <%= goto %> home
    </a>
  <% } %>
</div>
